<body style="font-family: Arial, sans-serif; background-color: #f4f4f9; margin: 0; padding: 20px; display: flex; flex-direction: column; align-items: center;">
  <h1 style="color: #333; margin-bottom: 20px;">Subir Documentos</h1>

  <form id="uploadForm" action="/api/users/premium/{{user._id}}" method="POST" enctype="multipart/form-data" style="background-color: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); width: 100%; max-width: 400px;">
    <div style="margin-bottom: 15px;">
      <label for="dniFront" style="display: block; font-weight: bold; margin-bottom: 5px; color: #555;">DNI Frente:</label>
      <input type="file" id="dniFront" name="dniFront" accept="image/*" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
    </div>

    <div style="margin-bottom: 15px;">
      <label for="dniBack" style="display: block; font-weight: bold; margin-bottom: 5px; color: #555;">DNI Dorso:</label>
      <input type="file" id="dniBack" name="dniBack" accept="image/*" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
    </div>

    <div style="margin-bottom: 15px;">
      <label for="selfie" style="display: block; font-weight: bold; margin-bottom: 5px; color: #555;">Selfie:</label>
      <input type="file" id="selfie" name="selfie" accept="image/*" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
    </div>

    <button type="submit" style="width: 100%; padding: 10px; background-color: #007bff; border: none; color: white; font-size: 16px; border-radius: 4px; cursor: pointer;">Subir Documentos</button>
  </form>

  <script src="/js/uploaddocuments.js"></script>
</body>
